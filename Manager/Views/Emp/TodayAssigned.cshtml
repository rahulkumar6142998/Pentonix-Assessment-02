@model IEnumerable<Manager.Models.Task>
@{
    ViewBag.Title = "TodayAssigned";
}

<h2>TodayAssigned</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 AssignedTasks">
            
        </div>
        <div class="col-md-6 logout">
            <h2>
                @Html.ActionLink("Logout", "Logout", "Login")
            </h2>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table table-bordered" id="myTable">

        <thead>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Task1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlanedEffort)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskStatus)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>


            </tr>
        </thead>



        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Task1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlanedEffort)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskStatus)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <input type="submit" value="Update" class="btn btn-default" />

                    </td>

                </tr>
            }
        <tbody>
    </table>
}