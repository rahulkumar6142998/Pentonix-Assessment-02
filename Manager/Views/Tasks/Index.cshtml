@model IEnumerable<Manager.Models.Task>

@{
    ViewBag.Title = "Index";

}


<link href="~/Content/CSS/AdminTask.css" rel="stylesheet" />



<div class="container">
    <div class="row">
        <div class="col-md-6 AssignedTasks">
            <h2>
                @Html.ActionLink("Assign Task", "Create")
            </h2>
        </div>
        <div class="col-md-6 logout">
            <h3>
                @Html.ActionLink("Logout", "Logout", "Login")
            </h3>
        </div>
    </div>

</div>




<table class="table table-bordered" id="myTable">

    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlanedEffort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>


        </tr>
    </thead>



    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Task1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanedEffort)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <button style="background-color:red;">@Html.ActionLink("Delete", "Delete", new { id = item.TicketNo })</button>

                </td>

            </tr>
        }
    <tbody>
</table>


